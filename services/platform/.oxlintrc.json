{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": ["../../.oxlintrc.json"],
  "overrides": [
    {
      "files": ["convex/**/*.ts"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "case": "snakeCase"
          }
        ]
      }
    },
    {
      "files": ["app/routes/**/$*.tsx"],
      "rules": {
        "unicorn/filename-case": "off"
      }
    }
  ],
  "ignorePatterns": [
    ".output",
    ".vinxi",
    "node_modules",
    "out",
    "build",
    "dist",
    "**/_generated",
    "**/integrations/**/_generated",
    "lib/shared",
    "*.gen.ts",
    "*.gen.tsx",
    "storybook-static",
    "public/**"
  ]
}
