{
  "name": "@tale/cli",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run build:linux && bun run build:mac && bun run build:windows",
    "build:linux": "bun build --compile --target=bun-linux-x64 --outfile=dist/tale src/index.ts",
    "build:mac": "bun build --compile --target=bun-darwin-arm64 --outfile=dist/tale src/index.ts",
    "build:windows": "bun build --compile --target=bun-windows-x64 --outfile=dist/tale.exe src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "typescript": "^5.8.3"
  }
}
